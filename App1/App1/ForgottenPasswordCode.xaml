<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ForgottenPasswordCode"
             Title="Wachtwoord resetten">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Voer code in"
                   FontSize="Large"
                   HorizontalOptions="Center"/>
            <Label Text="Voer de code in die u per e-mail heeft ontvangen"
                   FontSize="Small"
                   HorizontalOptions="Center"/>
            <Editor Keyboard="Numeric"
                    HorizontalOptions="CenterAndExpand"
                    Placeholder="Code"
                    MaxLength="4"
                    AutoSize="TextChanges"/>
            <Entry Placeholder="Nieuw wachtwoord"
                   HorizontalOptions="Center"/>
            <Entry Placeholder="Herhaal wachtwoord"
                   HorizontalOptions="Center"/>
            <Button Text="Verzenden"
                    Clicked="toMain"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>