<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Wachtwoord vergeten?"
                   FontSize="Header"/>
            <Label Text="Voer uw e-mailadres in om uw wachtwoord te resetten?"
                   FontSize="Micro"/>
            <Entry Placeholder="E-mailadres"/>
            <Button Text="Stuur mail"
                    Clicked="NavigateButton_ForgotPasswordCodePage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>