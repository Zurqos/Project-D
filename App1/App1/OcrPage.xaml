<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.OcrPage"
             Title="Scan pagina">
    <StackLayout>
        <Image Source="camera.jpeg"
               HorizontalOptions="Center"/>
        <Button Text="Scan maken"
               HorizontalOptions="Center"/>
        <Button Text="Scan uploaden"
               HorizontalOptions="Center"/>
        <Button Text="Scan verwerken"
               HorizontalOptions="Center"
                Clicked="ProcessScan"/>
    </StackLayout>
</ContentPage>